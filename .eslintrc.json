{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "script"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true
  },
  "rules": {
    "no-octal": "off",
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 4,
        "comments": 150,
        "ignoreUrls": true,
        "ignoreTemplateLiterals": true,
        "ignoreStrings": true
      }
    ]
  }
}
